@model List<MyAuto.Models.Car>

@{
    ViewData["Title"] = "Sale Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Покупка автомобиля</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 400px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

        .btn-cancel, .btn-submit {
            display: inline-block;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-cancel {
            background-color: #dc3545;
            color: #ffffff;
            margin-right: 10px;
        }

        .btn-submit {
            background-color: #007bff;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Покупка автомобиля</h2>
        <form id="purchaseForm" method="post">
            <div class="form-group">
                <label for="buyerName">Имя покупателя:</label>
                <input type="text" id="buyerName" name="buyerName" required>
            </div>
            <div class="form-group">
                <label for="carName">Имя автомобиля:</label>
                <input type="text" id="carName" name="carName" required>
            </div>
            <div class="form-group">
                <label for="carModel">Марка автомобиля:</label>
                <input type="text" id="carModel" name="carModel" required>
            </div>
            <div class="form-group">
                <label for="cardNumber">Номер кредитной карты (16 цифр):</label>
                <input type="text" id="cardNumber" name="cardNumber" pattern="[0-9]{16}" required>
            </div>
            <div class="form-group">
                <label for="amount">Сумма оплаты ($):</label>
                <input type="number" id="amount" name="amount" min="0" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="purchaseDate">Дата покупки:</label>
                <input type="date" id="purchaseDate" name="purchaseDate" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Телефонный номер:</label>
                <input type="tel" id="phoneNumber" name="phoneNumber" required>
            </div>
            <div class="form-group">
                <button type="button" class="btn-cancel" onclick="window.history.back()">Отмена</button>
                <button type="submit" class="btn-submit">Отправить</button>
            </div>
        </form>
    </div>

    <script>
        // Обработчик отправки формы
        document.getElementById('purchaseForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Предотвращаем отправку формы по умолчанию

            // Показываем сообщение в alert
            alert('Запрос отправлен!');
        });
    </script>
</body>
</html>